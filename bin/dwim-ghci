#!/usr/bin/env bash
if [ -f default.nix ]; then
  if [ -f *.cabal ]; then
    exec /home/bin/hs-cabal repl --ghc-options="$* -fobject-code"
  else
    exec /home/bin/hs-ghci "$@"
  fi
else
  if [ -f *.cabal ]; then
    exec cabal repl --ghc-options="$* -fobject-code"
  else
    exec ghci "$@"
  fi
fi
